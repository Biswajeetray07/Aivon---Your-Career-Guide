// DSA Coding Platform — Prisma Schema
// Supabase PostgreSQL + Prisma Client

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Enums ────────────────────────────────────────────────────────────────────

enum Role {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum SubmissionStatus {
  PENDING
  QUEUED
  RUNNING
  ACCEPTED
  WRONG_ANSWER
  WRONG_ANSWER_ON_HIDDEN_TEST
  TIME_LIMIT_EXCEEDED
  RUNTIME_ERROR
  COMPILATION_ERROR
  INTERNAL_ERROR
}

// ─── Models ───────────────────────────────────────────────────────────────────

model User {
  id                  String       @id @default(cuid())
  email               String       @unique
  passwordHash        String
  name                String?
  username            String?      @unique
  avatar              String?
  role                Role         @default(USER)
  rating              Int          @default(1200)
  provider            String?
  onboardingCompleted Boolean      @default(false)
  goals               String[]
  submissions         Submission[]
  arenaAsPlayer1      ArenaMatch[] @relation("ArenaPlayer1")
  arenaAsPlayer2      ArenaMatch[] @relation("ArenaPlayer2")
  chatThreads         ChatThread[]
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  @@index([rating])
  @@map("users")
}

model Problem {
  id           String            @id @default(cuid())
  title        String            @unique
  slug         String            @unique
  difficulty   Difficulty
  description  String            @db.Text
  starterCode  Json // { javascript: "...", python: "...", java: "..." }
  entryPoint   String
  problemType  String            @default("array") // array | string | binary_tree | linked_list | matrix | graph
  judgeMode    String            @default("exact") // exact | unordered | float | multiline | spj
  spjCode      String?           @db.Text // Python checker code for SPJ judge mode
  hasOracle    Boolean           @default(false) // Phase D: Feature flag for Universal Differential Oracle testing
  judgeMeta    ProblemJudgeMeta?
  tags         String[]
  examples     Json? // [{ input: "...", output: "...", explanation: "..." }]
  constraints  String?           @db.Text
  isActive     Boolean           @default(true)
  // Private AI context — never exposed via API, used only for AI hints/explanation
  aiContext    Json? // { completion: "...", prompt: "...", query: "...", response: "..." }
  testCases    TestCase[]
  submissions  Submission[]
  arenaMatches ArenaMatch[]
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  @@index([difficulty])
  @@index([isActive])
  @@map("problems")
}

model TestCase {
  id        String   @id @default(cuid())
  problemId String
  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  input     String   @db.Text
  expected  String   @db.Text
  isHidden  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())

  @@index([problemId])
  @@index([problemId, isHidden])
  @@map("test_cases")
}

model ProblemJudgeMeta {
  id            String   @id @default(cuid())
  problemId     String   @unique
  problem       Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  oracleCode    String?  @db.Text // Python brute-force trusted solution
  generatorCode String?  @db.Text // Python structured random test generator 
  updatedAt     DateTime @updatedAt

  @@map("problem_judge_meta")
}

model Submission {
  id        String           @id @default(cuid())
  userId    String
  problemId String
  code      String           @db.Text
  language  String // javascript | python | java | cpp
  status    SubmissionStatus @default(PENDING)
  runtime   Int? // milliseconds
  memory    Int? // kilobytes
  details   Json? // { testResults: [...], failedAt: ... }
  user      User             @relation(fields: [userId], references: [id])
  problem   Problem          @relation(fields: [problemId], references: [id])
  createdAt DateTime         @default(now())

  @@index([userId])
  @@index([problemId])
  @@index([userId, problemId])
  @@index([status])
  @@map("submissions")
}

model ArenaMatch {
  id          String    @id @default(cuid())
  status      String    @default("WAITING") // WAITING, ACTIVE, COMPLETED
  problemId   String
  problem     Problem   @relation(fields: [problemId], references: [id])
  player1Id   String
  player2Id   String
  player1     User      @relation("ArenaPlayer1", fields: [player1Id], references: [id])
  player2     User      @relation("ArenaPlayer2", fields: [player2Id], references: [id])
  winnerId    String?
  p1Progress  Int       @default(0) // test cases passed
  p2Progress  Int       @default(0)
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  @@index([status])
  @@index([player1Id])
  @@index([player2Id])
  @@map("arena_matches")
}

model ChatThread {
  id                String        @id @default(cuid())
  title             String?
  isAutoRetitled    Boolean       @default(false)
  lastAutoUpdatedAt DateTime?
  problemId         String? // New field for separation
  userId            String
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages          ChatMessage[]
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([userId])
  @@index([userId, problemId])
  @@map("chat_threads")
}

model ChatMessage {
  id        String     @id @default(cuid())
  role      String // user | assistant
  content   String     @db.Text
  threadId  String
  thread    ChatThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())

  @@index([threadId])
  @@map("chat_messages")
}
